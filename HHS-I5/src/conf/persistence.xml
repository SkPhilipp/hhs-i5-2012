<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="HHS-I5PU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>MySQL-OP</jta-data-source>
    <class>paradise.model.Booking</class>
    <class>paradise.model.BookingExcursion</class>
    <class>paradise.model.Employee</class>
    <class>paradise.model.Excursion</class>
    <class>paradise.model.ExcursionType</class>
    <class>paradise.model.Private</class>
    <class>paradise.model.Product</class>
    <class>paradise.model.Trip</class>
    <class>paradise.model.TripType</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <shared-cache-mode>NONE</shared-cache-mode>
    <properties>
      <property name="javax.persistence.target-database" value="MySQL"/>
      <property name="javax.persistence.logging.level" value="INFO"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/outdoorparadise"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="outdoorparadise"/>
      <property name="eclipselink.weaving.changetracking" value="false"/>
      <property name="eclipselink.cache.shared.default" value="false"/>
    </properties>
  </persistence-unit>
</persistence>
